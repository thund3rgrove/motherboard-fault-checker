<Window x:Class="TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TestProject"
        Title="Faults Simulator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- TreeView для отображения групп и элементов неисправностей -->
        <TreeView x:Name="faultsTreeView" Margin="10" SelectedItemChanged="FaultsTreeView_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:FaultGroup}" ItemsSource="{Binding Faults}">
                    <TextBlock Text="{Binding Name}"/>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:Fault}">
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Grid для отображения описания, измерения и решения выбранной неисправности -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Description:" FontWeight="Bold" Margin="0 0 0 5"/>
            <TextBox x:Name="descriptionTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                     Height="Auto" TextWrapping="Wrap" Margin="0 0 5 5" Grid.Row="1"/>

            <TextBlock Text="Исправно, если" FontWeight="Bold" Margin="0 10 0 5" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="measurementWorkingTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                     Height="Auto" TextWrapping="Wrap" Margin="0 10 5 5" Grid.Row="3" Grid.Column="0"/>

            <TextBlock Text="Неисправно, если" FontWeight="Bold" Margin="0 10 0 5" Grid.Row="2" Grid.Column="1"/>
            <TextBox x:Name="measurementNotWorkingTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                     Height="Auto" TextWrapping="Wrap" Margin="0 10 5 5" Grid.Row="3" Grid.Column="1"/>

            <TextBlock Text="Solution:" FontWeight="Bold" Margin="0 10 0 5" Grid.Row="4"/>
            <TextBox x:Name="solutionTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                     Height="Auto" TextWrapping="Wrap" Margin="0 10 5 5" Grid.Row="5" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
